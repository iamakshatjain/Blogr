<% include partials/header.ejs %>
<% include partials/nav.ejs %>
<div class="ui main text container segment">
	<div class="ui huge header">Edit Blog</div>
	<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
		<div class=field>
			<label>Title</label>
			<input type="text" name="title" value="<%= blog.title %>">
		</div>
		<div class=field>
			<label>Image</label>
			<input type="text" name="image" value="<%= blog.image %>">
		</div>
		<div class=field>
			<label>Body</label>
			<textarea name="body" placeholder="Body"><%- blog.body %></textarea>
		</div>
		<button type="submit" class="ui button red basic">
			Submit
		</button>
	</form>
</div>
<% include partials/footer.ejs %>
